        "\n",
        "```\n",
        "<form action=\"#\">\n",
        "   <label for=\"email\">Email:</label>\n",
        "   <input type=\"email\" name=\"email\" id=\"email\" placeholder=\"Enter your Email\">\n",
        "   <select name=\"country\">\n",
        "    <option value=\"India\">India</option>\n",
        "   </select>\n",
        "   <button type=\"submit\">Send</button>\n",
        "</form>\n",
        "```\n",
